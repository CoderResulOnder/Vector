#include <iostream>
using namespace std;
 class dynamicArray{
	public:
	 dynamicArray( int initSize = 0 ):
      theSize( initSize ), theCapacity( initSize + 20 )
      { 
      	sayilar= new int[ theCapacity ]; 
      	
      }
      void add(int x){
      	if(s==size()) resize();
      	sayilar[s]=x;
      	s++;
      }
      int size(){return theCapacity;}
      int resize(){
    
       int s=theSize;
       int *eski_sayilar=sayilar;
       
       sayilar=new int[theCapacity*2];
    
        for( int k = 0; k <s ; k++ )
            sayilar[ k ] = eski_sayilar[ k ];
    
        theSize = s;
        theCapacity = theCapacity*2;
      }
      
	private:
    	int theSize;
    	int theCapacity;
    	int *sayilar;
    
	
};

int main() {
	
	dynamicArray myD=dynamicArray(10);
	cout<<myD.size()<<endl;
	myDA.resize();
	for( int k = 0; k < 10; k++ )
        myD.add(4);
	cout<<myD.size()<<endl;
	system("PAUSE");
	  return 0;
	
   
}

